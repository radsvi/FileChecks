@{
	ViewData["Title"] = "Home Page";
}
@model FileChecks.Models.FolderInput;

<!DOCTYPE html>
<html lang="cs">
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Home Page</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
	<div class="form-group mt-3">
		<form asp-controller="FolderCheck" asp-action="Index" method="post">
			<div class="mb-3">
				<label asp-for="FolderPath" class="form-label"></label>
				<input asp-for="FolderPath" class="form-control" placeholder="path in C:\MyFolder" />
				<span asp-validation-for="FolderPath" class="text-danger"></span>
			</div>
			<input type="submit" value="Scan files" class="btn btn-primary" />
		</form>
	</div>
</body>
</html>